<!DOCTYPE html>
<html lang="en">
    <head>

        <title><%= assigns[:page_title] || "Welcome" %> | Mihai Blebea</title>

        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />

        <!-- Font Awesome icons (free version)-->
        <script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" crossorigin="anonymous"></script>
        <!-- Google fonts-->
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
        <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="<%= Routes.static_path(@conn, "/css/styles.css") %>" rel="stylesheet" />

        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-175295587-1"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'UA-175295587-1');
        </script>
        <!-- Global site tag (gtag.js) - Google Analytics -->

        <!-- Favicons -->
        <link rel="apple-touch-icon" sizes="180x180" href="<%= Routes.static_path(@conn, "/favicon/apple-touch-icon.png") %>" />
        <link rel="icon" type="image/png" sizes="32x32" href="<%= Routes.static_path(@conn, "/favicon/favicon-32x32.png") %>" />
        <link rel="icon" type="image/png" sizes="16x16" href="<%= Routes.static_path(@conn, "/favicon/favicon-16x16.png") %>" />
        <link rel="manifest" href="<%= Routes.static_path(@conn, "/favicon/site.webmanifest") %>" />

        <link rel="shortcut icon" href="<%= Routes.static_path(@conn, "/favicon/favicon.ico") %>" />
        <link rel="icon" type="image/vnd.microsoft.icon" href="<%= Routes.static_path(@conn, "/favicon/favicon.ico") %>" />
        <link rel="icon" type="image/x-icon" href="<%= Routes.static_path(@conn, "/favicon/favicon.ico") %>" />
        <link rel="icon" href="<%= Routes.static_path(@conn, "/favicon/favicon.ico") %>" />
        <!-- Favicons -->

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.0.0/animate.min.css" />
        <link href="<%= Routes.static_path(@conn, "/css/custom.css") %>" rel="stylesheet" />

        <!-- renders head.html template if exists inside the template folder -->
        <%= render_existing view_module(@conn), "head.html", assigns %>

    </head>
    <body>
        <%= render_component "nav_main.html", assigns %>

        <div>
            <div class="alert-float">
            <%# <section class="page-section blog" id="blog"> %>
                <div class="container">
                    <%= if get_flash(@conn, :info) do %>
                        <p class="alert alert-info animate__animated animate__backInDown" role="alert">
                            <i class="fas fa-grin-beam mr-1" aria-hidden="true"></i>
                            <%= get_flash(@conn, :info) %>
                        </p>
                    <% end %>
                    <%= if get_flash(@conn, :error) do %>
                        <p class="alert alert-danger animate__animated animate__backInDown" role="alert">
                            <i class="fas fa-dizzy mr-1" aria-hidden="true"></i>
                            <%= get_flash(@conn, :error) %>
                        </p>
                    <% end %>
                </div>
            <%# </section> %>
            </div>
            <%= @inner_content %>
        </div>

        <footer class="footer text-center">
            <div class="container">
                <div class="row">
                    <!-- Footer Location-->
                    <div class="col-lg-4 mb-5 mb-lg-0">
                        <h4 class="text-uppercase mb-4">Location</h4>
                        <p class="lead mb-0">
                            97 Britten Close, NW11 7HW
                            <br />
                            London, UK
                        </p>
                    </div>
                    <!-- Footer Social Icons-->
                    <div class="col-lg-4 mb-5 mb-lg-0">
                        <h4 class="text-uppercase mb-4">Around the Web</h4>
                        <%= for nav <- footer_social_nav() do %>
                            <a class="btn btn-outline-light btn-social mx-1" target="_blank" href="<%= nav.url %>">
                                <i class="<%= nav.icon_class %>"></i>
                            </a>
                        <% end %>
                    </div>
                    <!-- Footer About Text-->
                    <div class="col-lg-4">
                        <h4 class="text-uppercase mb-4">About Mihai</h4>
                        <p class="lead mb-0">
                            Freelance is a free to use, MIT licensed Bootstrap theme created by
                            <a href="http://startbootstrap.com">Start Bootstrap</a>
                            .
                        </p>
                    </div>
                </div>
            </div>
        </footer>

        <!-- Copyright Section-->
        <div class="copyright py-4 text-center text-white">
            <div class="container"><small>Copyright Â© MihaiBlebea <%= DateTime.utc_now.year %></small></div>
        </div>

        <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes)-->
        <div class="scroll-to-top d-lg-none position-fixed">
            <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top"><i class="fa fa-chevron-up"></i></a>
        </div>

        <!-- Bootstrap core JS-->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Third party plugin JS-->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
        <!-- Core theme JS-->
        <script src="<%= Routes.static_path(@conn, "/js/scripts.js") %>"></script>
    </body>
</html>
